{
  "name": "timer-app",
  "version": "1.0.0",
  "description": "時間管理網站 - 支援鬧鐘、倒數計時、語音輸入",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "start": "python -m http.server 3000",
    "dev": "python -m http.server 8000",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "e2e": "playwright test",
    "e2e:debug": "playwright test --debug",
    "lint": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "build": "echo 'Static site - no build needed'",
    "lighthouse": "lighthouse http://localhost:3000 --view",
    "analyze": "lighthouse http://localhost:3000"
  },
  "keywords": [
    "timer",
    "alarm",
    "time-management",
    "pwa",
    "offline",
    "voice-input"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^9.3.4",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "web-vitals": "^3.4.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
